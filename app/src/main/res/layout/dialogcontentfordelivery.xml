<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="חלונית עדכון נתונים"
        android:background="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#fff"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מחיר"
        android:id="@+id/price"
        android:layout_marginTop="7dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="שם ספק"
        android:id="@+id/usupplier"
        android:layout_marginTop="7dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מספר קבלה"
        android:id="@+id/uinvoice"
        android:layout_marginTop="7dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="האם שולם"
        android:id="@+id/uispaid"
        android:layout_marginTop="7dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="תאריך הוצאה"
        android:id="@+id/udatecreate"
        android:focusableInTouchMode="false"
        android:layout_marginTop="7dp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="עדכן"
        android:id="@+id/usubmit"
        android:background="@color/black"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>